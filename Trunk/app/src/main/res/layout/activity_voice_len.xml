<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoiceLenActivity">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/voiceLenSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:switchMinWidth="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.9"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开关"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/voiceLenSwitch"
        app:layout_constraintBottom_toBottomOf="@id/voiceLenSwitch"
        app:layout_constraintRight_toLeftOf="@id/voiceLenSwitch"/>

    <EditText
        android:id="@+id/voiceLenEdit"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="6"
        android:textSize="50sp"
        android:textAlignment="center"
        android:digits="0123456789"
        android:maxLength="2"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="固定秒数"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/voiceLenEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="编辑"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:background="@drawable/primary_bg_circle_shape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/voiceLenEdit"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>